<svg width="800" height="800" viewBox="0 0 800 800" xmlns="http://www.w3.org/2000/svg">
  <rect width="800" height="800" fill="#0a0a0a"/>
  <circle cx="400" cy="400" r="350" fill="url(#gradient)" stroke="url(#borderGradient)" stroke-width="8"/>
  
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0a0a0a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="borderGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff2b4a;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ff6b35;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff8c42;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ff2b4a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff8c42;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <g transform="translate(400, 280)">
    <circle cx="-45" cy="0" r="32" fill="none" stroke="url(#textGradient)" stroke-width="5"/>
    <line x1="-45" y1="0" x2="0" y2="90" stroke="url(#textGradient)" stroke-width="7" stroke-linecap="round"/>
    <circle cx="45" cy="0" r="32" fill="none" stroke="url(#textGradient)" stroke-width="5"/>
    <line x1="45" y1="0" x2="0" y2="90" stroke="url(#textGradient)" stroke-width="7" stroke-linecap="round"/>
    <line x1="0" y1="90" x2="-25" y2="135" stroke="url(#textGradient)" stroke-width="5" stroke-linecap="round"/>
    <line x1="0" y1="90" x2="25" y2="135" stroke="url(#textGradient)" stroke-width="5" stroke-linecap="round"/>
  </g>
  
  <text x="400" y="480" font-family="'Arial Black', sans-serif" font-size="90" font-weight="900" 
        text-anchor="middle" fill="url(#textGradient)" letter-spacing="14">
    UPPER
  </text>
  
  <text x="400" y="570" font-family="'Arial Black', sans-serif" font-size="90" font-weight="900" 
        text-anchor="middle" fill="url(#textGradient)" letter-spacing="14">
    CUTS
  </text>
  
  <text x="400" y="620" font-family="Arial, sans-serif" font-size="28" font-weight="300" 
        text-anchor="middle" fill="#ffffff" letter-spacing="8">
    BARBERSHOP
  </text>
  
  <line x1="180" y1="400" x2="280" y2="400" stroke="url(#borderGradient)" stroke-width="3"/>
  <line x1="520" y1="400" x2="620" y2="400" stroke="url(#borderGradient)" stroke-width="3"/>
</svg>
